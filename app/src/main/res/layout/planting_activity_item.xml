<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:resauto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/icon_height"
    resauto:cardCornerRadius="4dp"
    resauto:cardElevation="4dp"
    resauto:cardMaxElevation="4dp"
    resauto:cardPreventCornerOverlap="true"
    resauto:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_marginTop="@dimen/drawer_icon_size"
        android:paddingLeft="@dimen/ui_spacing_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/farm_description"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/icon_width"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/farmer_description"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/icon_width"
            android:layout_marginTop="@dimen/layout_height"
            android:textSize="@dimen/medium_text"
            />

        <TextView
            android:id="@+id/farmer_address"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/icon_width"
            android:layout_marginTop="@dimen/icon_farmer"
            android:textSize="@dimen/medium_text"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>